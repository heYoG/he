<?xml version="1.0" encoding="UTF-8"?>
<serviceGroup>
	<!-- 服务名称，wsdl路径部分,一个<service>元素只能发布一个WebService类， 要发布多个webservice，可以在文件两端加上<serviceGroup>...</serviceGroup>,必须 -->
	<service name="SshWebService">
		<!-- 服务描述，任意,可选 -->
		<description>axis2WebService测试1,无aar</description>
		<!-- 直接指定要发布服务的类 -->
		<!-- <parameter name="ServiceClass">webservice.WebServiceInterface</parameter> -->
		<!-- 是用spring管理指定要发布的类 -->
		<parameter name="SpringBeanName">webService</parameter>
		<parameter name="ServiceObjectSupplier"> org.apache.axis2.extensions.spring.receivers.SpringServletContextObjectSupplier 
			</parameter>
		<!-- 方式一：要发布web service服务的方法 ,有多少个方法写多少个operation标签 -->
		<operation name="testWebService1">
			<messageReceiver
				mep="http://www.w3.org/2004/08/wsdl/in-out"
				class="org.apache.axis2.rpc.receivers.RPCMessageReceiver" />
			<messageReceiver
				mep="http://www.w3.org/2004/08/wsdl/in-only"
				class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver" />
		</operation>
		<operation name="testWebService2">
			<messageReceiver
				mep="http://www.w3.org/2004/08/wsdl/in-out"
				class="org.apache.axis2.rpc.receivers.RPCMessageReceiver" />
			<messageReceiver
				mep="http://www.w3.org/2004/08/wsdl/in-only"
				class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver" />
		</operation>
		<!-- 方式二：配置消息接收器，Axis2会自动选择 ,不需要显示的写出要发布Web Service的方法 -->
		<!-- <messageReceivers> 可处理输入输出-有参数和返回值 <messageReceiver mep="http://www.w3.org/2004/08/wsdl/in-out" 
			class="org.apache.axis2.rpc.receivers.RPCMessageReceiver" /> 只处理输入-只有参数没有返回值 
			<messageReceiver mep="http://www.w3.org/2004/08/wsdl/in-only" class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver" 
			/> </messageReceivers> -->
		<!-- 屏蔽的接口 -->
		<!-- <excludeOperations> <operation></operation> </excludeOperations> -->
	</service>
	<!-- 第二个service -->
	<service name="SshWebService2">
		<description>axis2WebService测试2,无aar</description>
		<!-- 多个service时普通web项目name值相同;集成spring时一样,对应name值相同 -->
		<parameter name="ServiceClass">webservice.WebServiceInterface2</parameter>
		<messageReceivers>
			<messageReceiver
				mep="http://www.w3.org/2004/08/wsdl/in-out"
				class="org.apache.axis2.rpc.receivers.RPCMessageReceiver" />
			<messageReceiver
				mep="http://www.w3.org/2004/08/wsdl/in-only"
				class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver"></messageReceiver>
		</messageReceivers>
	</service>
</serviceGroup>