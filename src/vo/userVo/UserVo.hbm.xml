<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="vo.userVo.UserVo" table="user_table">
		<id name="id" type="java.lang.Integer">
			<column name="id"></column>
			<!--generator 生成该持久化类实例的唯一标识符 -->
			<generator class="native"></generator>
		</id>
		<property name="userNo" type="java.lang.String">
			<column name="userNo"></column>
		</property>
		<property name="pwd" type="java.lang.String">
			<column name="pwd"></column>
		</property>
		<property name="age" type="java.lang.Integer">
			<column name="age"></column>
		</property>
		<property name="userName" type="java.lang.String">
			<column name="userName"></column>
		</property>
		<property name="status" type="java.lang.String">
			<column name="status"></column>
		</property>
		<!-- 用户-权限,多对一，不懒加载，不级联更新(级联更新当前对象，关联对象同时会更新)，默认none -->
		<many-to-one name="av" lazy="false" column="AuthorityID" cascade="none" class="vo.userVo.AuthorityVo"/>
		<!-- 用户-文件,一对多，级联删除文件 -->
		<set name="fileVo" lazy="false" inverse="true" cascade="delete"><!--控制反转，交由IOC容器管理级联关系-->
			<key column="user_id"></key>
			<one-to-many class="vo.fileVo.FileManageVo"/>
		</set>
		<!-- 用户-部门,多对一 -->
		<many-to-one name="dept" lazy="false" column="dept_id" class="vo.deptVo.DeptVo"/>
		<!-- 用户-广告,一对多 -->
		<set name="ad" lazy="false" inverse="true" cascade="delete">
			<key column="user_id"></key>
			<one-to-many class="vo.adVo.AdVo"/>
		</set>
		<!-- 用户-印模，一对多 ,级联删除-->
		<set name="sv" lazy="false" inverse="true" cascade="delete">
			<key column="user_id"></key>
			<one-to-many class="vo.sealImageVo.SealImageVo"/>
		</set>
		<!-- 用户-邮件，一对多 ,级联删除-->
		<set name="ev" lazy="false" inverse="true" cascade="delete">
			<key column="user_id"></key>
			<one-to-many class="vo.emailVo.EmailVo"/>
		</set>
		<!-- 用户-日志，一对多,级联删除 -->
		<set name="log" lazy="false" inverse="true" cascade="delete">
			<key column="user_id"></key>
			<one-to-many class="vo.logVo.LogVo"/>
		</set>
	</class>
</hibernate-mapping>